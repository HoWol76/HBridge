<UserControl x:Class="Shutters.RollerShutter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shutters" x:Name="rollerShutter"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    <Button Background="Transparent" Click="Button_Click" ContextMenuOpening="Button_ContextMenuOpening">
    <Viewbox>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Image Source="Resources/rollerShutterFrame.png" Height="600"/>
            <Image Source="Resources/rollerShutterRolling.png" Height="500" x:Name="shutterImage" >
                <Image.Clip>
                    <RectangleGeometry x:Name="wau"  Rect="0,120,500,320"/>
                </Image.Clip>
            </Image>
            <TextBlock Grid.Row="1" FontSize="100" HorizontalAlignment="Center" Text="{Binding ShutterName, ElementName=rollerShutter}"/>
        </Grid>
    </Viewbox>
    </Button>
</UserControl>
